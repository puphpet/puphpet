<input type="hidden" name="firewall[install]" value="1" />

<div class="section-header">
    <h1>Firewall</h1>
    <p class="lead">Open select ports.</p>
</div>

<div class="field-container">
    <div class="form-group">
        <p class="help-block">
            Warning: This is for fairly advanced use! Try to only open ports as
            you need them. The SSH port (usually <code>22</code> and defined in
            <code>vagrantfile.ssh.port</code>) is automatically opened for you.
        </p>
    </div>

    <div class="clearfix"></div>

    {% for rule in firewall.rules %}
        {% include 'PuphpetMainBundle:firewall/sections:rule.html.twig' with {'rule': rule} %}
    {% endfor %}

    <a href="#" data-source-url="{{ path('puphpet.firewall.rule') }}"
       class="add-block"><i class="fa fa-level-up fa-rotate-90"></i> Add another firewall rule</a>

    <div class="clearfix"></div>

    <div class="col-xs-6">
        <a class="btn btn-lg btn-success btn-block next-section" type="button" href="#locale">
            <i class="fa fa-hand-o-left"></i> Locale
        </a>
    </div>
    <div class="col-xs-6">
        <a class="btn btn-lg btn-success btn-block next-section" type="button" href="#cron">
            Cron Jobs <i class="fa fa-hand-o-right"></i>
        </a>
    </div>

    <div class="clearfix"></div>
</div>
