{% set uniqid = uniqid('nxvp_', true) %}
{% set proxy = (vhost.proxy is defined and vhost.proxy is not empty) ? vhost.proxy : '' %}

<div class="nested-block" id="{{ uniqid }}">
    <a href="#" class="delete-block remove"
       data-block-id="{{ uniqid }}"><i class="fa fa-times"></i></a>
    <fieldset>
        <legend>Proxy</legend>

        <div class="form-group col-xs-12">
            <div class="help-text">
                This should match an upstream name configured above. e.g.
                <code>http://backend</code>
            </div>
            <label for="nginx-vhosts-{{ uniqid }}-proxy">Proxy URL</label>
            <input type="text" id="nginx-vhosts-{{ uniqid }}-proxy"
                   name="nginx[vhosts][{{ uniqid }}][proxy]"
                   placeholder="" class="form-control"
                   value="{{ proxy }}" />
        </div>
    </fieldset>
</div>
