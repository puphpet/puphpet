<div class="tab-pane fade in" id="additional-tools">
    <div class="page-header compact">
        <h1><i class="fa fa-th-large"></i> Additional Tools</h1>
    </div>

    <section id="mail">
        <div class="page-header compact">
            <h1><i class="fa fa-envelope"></i> Mail</h1>
        </div>
        <ul class="nav nav-tabs icon-bar">
            <li class="col-xs-2 active">
                <a href="#mailcatcher-tab" data-toggle="tab">
                    <div class="tab-icon">
                        <img src="{{ asset('assets/v4/img/vendors/mailcatcher-active.png') }}" class="tab-icon-active" />
                        <img src="{{ asset('assets/v4/img/vendors/mailcatcher-inactive.png') }}" class="tab-icon-inactive" />
                        Mailcatcher
                    </div>
                </a>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="mailcatcher-tab">
                {% set extension = extensionManager.getExtensionBySlug('mailcatcher') %}
                {{ extension.renderFront(extension.data)|raw }}
            </div>
        </div>
    </section>

    <section id="work-queue">
        <div class="page-header compact">
            <h1><i class="fa fa-sort-numeric-asc"></i> Work Queues</h1>
