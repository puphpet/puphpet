{% if vhostNum is not defined %}
{% set vhostNum = 1 %}
{% endif %}

<div id="apache-vhost-{{ vhostNum }}">
    <legend>Virtual Host #{{ vhostNum }}</legend>
    <div class="control-group">
        <label class="control-label" for="apache-vhosts-{{ vhostNum }}-servername">Server Name</label>

        <div class="controls">
            <input id="apache-vhosts-{{ vhostNum }}-servername" name="apache[vhosts][{{ vhostNum }}][servername]"
                   type="text" class="input-xlarge" required="" placeholder="awesome.dev" value="awesome.dev" />
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="apache-vhosts-{{ vhostNum }}-serveraliases">Server Aliases</label>

        <div class="controls">
            <input id="apache-vhosts-{{ vhostNum }}-serveraliases" name="apache[vhosts][{{ vhostNum }}][serveraliases]"
                   type="text" class="input-xlarge tags" placeholder="www.awesome.dev" value="" />

            <p class="help-block">Separated by comma</p>
        </div>
    </div>

    <div class="row">
        <div class="span4">
            <div class="control-group">
                <label class="control-label" for="apache-vhosts-{{ vhostNum }}-docroot">Document Root</label>

                <div class="controls">
                    <input id="apache-vhosts-{{ vhostNum }}-docroot" name="apache[vhosts][{{ vhostNum }}][docroot]"
                           type="text" required="" placeholder="/var/www/awesome" value="/var/www/" />
                </div>
            </div>
        </div>

        <div class="span2">
            <div class="control-group">
                <label class="control-label" for="apache-vhosts-{{ vhostNum }}-port">Port</label>

                <div class="controls">
                    <input id="apache-vhosts-{{ vhostNum }}-port" name="apache[vhosts][{{ vhostNum }}][port]"
                           type="text" class="input-mini" placeholder="80" value="80" />
                </div>
            </div>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="apache-vhosts-{{ vhostNum }}-envvars">Environment Variables</label>

        <div class="controls">
            <input id="apache-vhosts-{{ vhostNum }}-envvars" name="apache[vhosts][{{ vhostNum }}][envvars]" type="text"
                   class="input-xlarge tags" placeholder="APP_ENV dev, APP_FOO bar" value="" />

            <p class="help-block">"name value", separated by comma</p>
        </div>
    </div>

    {% if vhostNum != '1' %}
        <p class="text-center"><a class="apache-vhost-del btn btn-danger" href="#" rel="apache-vhost-{{ vhostNum }}">Delete this Host</a></p>
    {% endif %}
</div>
