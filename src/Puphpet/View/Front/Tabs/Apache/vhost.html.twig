{% if vhostNum is not defined %}
{% set vhostNum = 1 %}
{% endif %}

<fieldset id="apache-vhost-{{ vhostNum }}">
    <legend>Virtual Host #{{ vhostNum }}</legend>

    <div class="row">
        <div class="col col-lg-5">
            <label for="apache-vhosts-{{ vhostNum }}-servername">Server Name</label>
            <input id="apache-vhosts-{{ vhostNum }}-servername" name="apache[vhosts][{{ vhostNum }}][servername]"
                   type="text" required placeholder="awesome.dev" value="awesome.dev" />
        </div>
        <div class="col col-lg-5">
            <label for="apache-vhosts-{{ vhostNum }}-serveraliases">Server Aliases</label>
            <input id="apache-vhosts-{{ vhostNum }}-serveraliases" name="apache[vhosts][{{ vhostNum }}][serveraliases]"
                   type="text" class="tags" placeholder="www.awesome.dev" value="" />
            <p class="help-block">Separated by comma</p>
        </div>
    </div>

    <div class="row">
        <div class="col col-lg-5">
            <label for="apache-vhosts-{{ vhostNum }}-docroot">Document Root</label>
            <input id="apache-vhosts-{{ vhostNum }}-docroot" name="apache[vhosts][{{ vhostNum }}][docroot]"
                   type="text" required placeholder="/var/www/awesome" value="/var/www/" />
        </div>
        <div class="col col-lg-2">
            <label for="apache-vhosts-{{ vhostNum }}-port">Port</label>
            <input id="apache-vhosts-{{ vhostNum }}-port" name="apache[vhosts][{{ vhostNum }}][port]"
                   type="text" placeholder="80" value="80" />
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col col-lg-5">
            <label for="apache-vhosts-{{ vhostNum }}-envvars">Environment Variables</label>
            <input id="apache-vhosts-{{ vhostNum }}-envvars" name="apache[vhosts][{{ vhostNum }}][envvars]"
                   type="text" class="tags" placeholder="APP_ENV dev, APP_FOO bar"
                   value="" />
            <p class="help-block">"name value", separated by comma</p>
        </div>
    </div>

    {% if vhostNum != '1' %}
        <p class="text-center"><a class="apache-vhost-del btn btn-danger" href="#" rel="apache-vhost-{{ vhostNum }}">Delete this Virtual Host</a></p>
    {% endif %}

    <br />
</fieldset>
