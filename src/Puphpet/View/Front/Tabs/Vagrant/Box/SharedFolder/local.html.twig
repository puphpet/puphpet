{% if sharedFolderNum is not defined %}
    {% set sharedFolderNum = 1 %}
{% endif %}

<fieldset id="vagrant-sharedfolder-{{ sharedFolderNum }}">
    <legend>Shared Folder #{{ sharedFolderNum }}</legend>

    <label>Shared Folder Type</label>
    <div>
        <label class="radio-inline">
            <input type="radio" name="provider[{{ provider }}][sharedfolder][{{ sharedFolderNum }}][foldertype]" value="default" checked /> Default
        </label>
        <label class="radio-inline">
            <input type="radio" name="provider[{{ provider }}][sharedfolder][{{ sharedFolderNum }}][foldertype]" value="nfs" /> NFS
        </label>
        <p class="help-block">Windows users should choose the Default option</p>
    </div>

    <div class="row">
        <div class="col col-lg-5">
            <label for="provider-{{ provider }}-synced_folder-source">Box Sync Folder Source</label>
            <input id="provider-{{ provider }}-synced_folder-source" name="provider[{{ provider }}][sharedfolder][{{ sharedFolderNum }}][synced_folder][source]" type="text"
                   required placeholder="/path/to/your/web/files" value="./" />
            <p class="help-block">Path your files are stored on host machine</p>
        </div>

        <div class="col col-lg-5">
            <label for="provider-{{ provider }}-synced_folder-target">Box Sync Folder Target</label>
            <input id="provider-{{ provider }}-synced_folder-target" name="provider[{{ provider }}][sharedfolder][{{ sharedFolderNum }}][synced_folder][target]" type="text"
                   required placeholder="/path/on/vm" value="/var/www" />
            <p class="help-block">Path the VM will see your files in</p>
        </div>
    </div>

    {% if sharedFolderNum != '1' %}
        <p class="text-center"><a class="vagrant-sharedfolder-del btn btn-danger" href="#" rel="vagrant-sharedfolder-{{ sharedFolderNum }}">Delete this Shared Folder</a></p>
    {% endif %}
</fieldset>