{% if php.php54 == 1 %}
apt::ppa { 'ppa:ondrej/php5': }
{% endif %}

class { 'php':
  service => 'apache',
  require => Package['apache'],
}

{% for phpModule in php.modules.php %}
php::module { '{{ module|raw }}': }
{% endfor %}

class { 'php::devel':
  require => Class['php'],
}

{% if php.pear == 1 %}
class { 'php::pear':
  require => Class['php'],
}

{% for pear in php.modules.pear %}
php::pear::module { '{{ pear|raw }}':
  use_package => false,
}
{% endfor %}

{% for pecl in php.modules.pecl %}
php::pecl::module { '{{ pecl|raw }}':
  use_package => false,
}
{% endfor %}

{% if php.xdebug == 1 %}
class { 'xdebug': }

xdebug::config { 'cgi': }
xdebug::config { 'cli': }
{% endif %}
{% endif %}{# if php.pear == 1 #}

{% if php.composer == 1 %}
class { 'php::composer': }
{% endif %}

php::ini { 'default':
  value  => [
    'date.timezone = America/Chicago',
    'display_errors = On',
    'error_reporting = -1'
  ],
  target => 'error_reporting.ini',
}
