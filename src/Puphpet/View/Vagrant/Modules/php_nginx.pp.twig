{% if php.php54 == 1 %}
apt::ppa { 'ppa:ondrej/php5':
  before  => Class['php'],
}
{% endif %}

class { 'php':
  package             => 'php5',
  service             => 'php5-fpm',
  service_autorestart => false,
}

{% if php.modules.php|length > 0 %}
php::module {
  [
    'php5-fpm',
{% for phpModule in php.modules.php %}
    '{{ phpModule|raw }}',
{% endfor %}
  ]:
  service => '{{ php_service }}',
}
{% endif %}

service { 'php5-fpm':
  ensure     => running,
  enable     => true,
  hasrestart => true,
  hasstatus  => true,
  require    => Package['php5-fpm'],
}

class { 'php::devel':
  require => Class['php'],
}

{% if php.pear == 1 %}
class { 'php::pear':
  require => Class['php'],
}

{% for pear in php.modules.pear %}
php::pear::module { '{{ pear|raw }}':
  use_package => false,
}
{% endfor %}

{% for pecl in php.modules.pecl %}
php::pecl::module { '{{ pecl|raw }}':
  use_package => false,
}
{% endfor %}

{% if php.xdebug == 1 %}
class { 'xdebug':
  service => '{{ webserver }}',
}

xdebug::config { 'cgi': }
xdebug::config { 'cli': }
{% endif %}
{% endif %}{# if php.pear == 1 #}

{% if php.composer == 1 %}
class { 'php::composer': }
{% endif %}

php::ini { 'default':
  value  => [
    'date.timezone = America/Chicago',
    'display_errors = On',
    'error_reporting = -1'
  ],
  target => 'error_reporting.ini',
  service => '{{ php_service }}',
}
