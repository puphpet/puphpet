{# php5-fpm is always used when nginx is chosen#}
class { 'php':
  package             => 'php5',
  service             => 'php5-fpm',
  service_autorestart => false,
}

{% if php.modules.php|length > 0 %}
php::module {
  [
{% for phpModule in php.modules.php %}
    '{{ phpModule|raw }}',
{% endfor %}
  ]:
  service => '{{ php_service }}',
}
{% endif %}

service { 'php5-fpm':
  ensure     => running,
  enable     => true,
  hasrestart => true,
  hasstatus  => true,
  require    => Package['php5-fpm'],
}
