{% set database = edition.get('database') %}
<div class="bs-example database">
    <div class="row">
        <div class="col col-lg-12">
            <p>You have the option of choosing either MySQL or PostgreSQL.</p>

            <input type="hidden" name="database" value="{{ database }}"/>

            <ul id="databaseTab" class="nav nav-pills" data-configuration-name="database">
                <li{% if database == 'mysql' %} class="active"{% endif %}>
                    <a href="#database-mysql" data-toggle="pill"
                       data-configuration-value="mysql">MySQL</a>
                </li>
                <li{% if database == 'postgresql' %} class="active"{% endif %}>
                    <a href="#database-postgresql" data-toggle="pill"
                       data-configuration-value="postgresql">PostgreSQL</a>
                </li>
            </ul>

            <div id="databaseTabContent" class="tab-content">
                <div class="tab-pane fade{{ database == 'mysql'? ' in active' }}" id="database-mysql">
                    <div id="mysql">
                        {% include '@Symfony/Tabs/Database/mysql.html.twig' %}
                    </div>
                </div>

                <div class="tab-pane fade{{ database == 'postgresql'? ' in active' }}" id="database-postgresql">
                    <div id="postgresql">
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
