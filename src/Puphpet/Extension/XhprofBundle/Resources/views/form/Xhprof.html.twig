<section id="xhprof">

    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Xhprof</h3>
                </div>

                <div class="panel-body">
                    <div class="row form-group">
                        <div class="col-xs-12">
                            <label class="checkbox-inline">
                                <input type="checkbox" name="xhprof[install]"
                                       class="update-other-input" data-php[composer]="1"
                                       {% if xhprof.install %}checked{% endif %} value="1" /> Install Xhprof
                            </label>

                            <p class="help-block">
                                Logs will be available from <a>http://&lt;ip_address&gt;/xhprof</a>.<br />
                                The IP address is the <a href="#vagrantfile">one you chose here</a>.<br />
                                <a href="http://www.geekyboy.com/archives/718#xhprof-usage" target="_blank">Learn how to use XHProf</a>
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</section>
