## Begin Solr manifest

if $solr_values == undef {
    $solr_values = hiera('solr', false)
}

if $solr_values['install'] != undef and $solr_values['install'] == 1 {
    if ($solr_values['settings']['cores'] != undef) {
        $solr_cores = $solr_values['settings']['cores'].split(',')

    } else {
        $solr_cores = []
    }

    class { solr:
        cores => $solr_cores
    }
}

## End Solr manifest
