{% set uniqid = uniqid('vvs_', true) %}

<!-- vagrantfile-digitalocean / Shared Folders -->
<div class="row" id="{{ uniqid }}">

    <input type="hidden" name="vagrantfile-digitalocean[vm][synced_folder][{{ uniqid }}][id]"
           value="{% if synced_folder.id %}{{ synced_folder.id }}{% else %}{{ uniqid() }}{% endif %}" />

    <div class="col-xs-9">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Sharing Your Folders</h3>
            </div>

            <div class="panel-body">
                <div class="row form-group">
                    <div class="col-md-6">
                        <label for="vagrantfile-digitalocean-vm-synced_folder-{{ uniqid }}-source">Box Sync Folder Source</label>
                        <input type="text" id="vagrantfile-digitalocean-vm-synced_folder-{{ uniqid }}-source"
                               name="vagrantfile-digitalocean[vm][synced_folder][{{ uniqid }}][source]"
                               required placeholder="/path/to/your/web/files"
                               value="{{ synced_folder.source }}" class="form-control" />

                        <p class="help-block">
                            Path your files are stored on host machine,
                            <a href="http://docs.vagrantup.com/v2/synced-folders/index.html">more information</a>
                        </p>
                    </div>

                    <div class="col-md-6">
                        <label for="vagrantfile-digitalocean-vm-synced_folder-{{ uniqid }}-target">Box Sync Folder Target</label>
                        <input type="text" id="vagrantfile-digitalocean-vm-synced_folder-{{ uniqid }}-target"
                               name="vagrantfile-digitalocean[vm][synced_folder][{{ uniqid }}][target]"
                               required placeholder="/path/on/vm"
                               value="{{ synced_folder.target }}" class="form-control" />

                        <p class="help-block">
                            Path your files are stored on host machine,
                            <a href="http://docs.vagrantup.com/v2/synced-folders/index.html">more information</a>
                        </p>
                    </div>
                </div>

                <p class="help-block">
                    To upload files, <code>rsync</code> is used on <code>$ vagrant up</code>,
                    <code>$ vagrant provision</code> and <code>$ vagrant reload</code>.
                    Now may be a good time to work out your deployment strategy.
                </p>

                <p class="text-center">
                    <button type="button" class="btn btn-danger btn-sm deleteParentContainer"
                            data-parent-id="{{ uniqid }}">Remove this shared folder</button>
                </p>
            </div>

        </div>
    </div>
    <div class="col-xs-3 right-panel"></div>
</div>
<!-- end vagrantfile-digitalocean / Shared Folders -->
